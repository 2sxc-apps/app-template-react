@inherits Custom.Hybrid.RazorTyped
@using AppCode.Extensions.JsEditions
@using AppCode.Extensions.React
@using ToSic.Sxc.Services;
@using ToSic.Razor.Blade;

@{
  var editions = MyModel.String("Editions", fallback: "live,staging,local");
  var appName = MyModel.String("AppName");
  
  var moduleId = MyContext.Module.Id;

  // Enable 2sic JS APIs (this will load the latest js-api to help with getting data from 2sxc data base)
  var page = GetService<IPageService>();
  page.Activate("2sxc.JsCore");

  // Add <base> tag using RazorBlade - TODO: Check if needed
  page.SetBase((Link.Base()));

  // Create helper to manage the editions (live, staging etc.)
  var editionsHelper = GetService<Editions>();

  // Create helper to integrate react best-practice
  var reactHelper = GetService<React>();

  // Show React either from dev (local) or from the compiled live/staging folders
  if (editionsHelper.CurrentEdition == "local")
  {
    @Html.Partial("./React Loader.cshtml");
  }
  else
  {
    @Html.Raw(reactHelper.ImportReactHtml(editionsHelper.CurrentEdition));
  }

  // Show edition selector for host/super users only - you could also change this, to allow testers to see this
  if (MyUser.IsContentAdmin)
  {
    @Html.Partial("../js-editions/Editions Bar.cshtml", new { Editions = editions })
  }
}

@Kit.Page.TurnOn($"window.reactAppRegistry.register()", data: new { appName = appName } )
@Kit.Page.TurnOn($"window.{appName}.init()", data: new { moduleId = moduleId } )
